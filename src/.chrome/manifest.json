{
  "manifest_version": 2,
  "name"            : "KBD Button for Stack Exchange sites",
  "version"         : "@ant-version@",

  "description"   : "Adds a button for KBD syntax to the Stack Exchange editor",
  "icons"         : {
    "16" : "icons/icon16.png",
    "48" : "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "author"         : "Oliver Salzburg",
  "content_scripts": [
    {
      "matches"   : [
        "@ant-sites-string-list@"
      ],
      "all_frames": true,
      "run_at"    : "document_start",
      "js"        : [
        "jquery-1.8.3.min.js",
        "se-kbd-button.js"
      ]
    }
  ],
  "content_security_policy" : "script-src 'self'; object-src 'self'",
  "homepage_url"            : "https://github.com/oliversalzburg/se-kbd-button",
  "permissions"             : [
    "activeTab",
    "@ant-sites-string-list@"
  ],
  "web_accessible_resources": [
    "jquery-1.8.3.min.js"
  ]
}